<% if @project %>
  <% if @post %>
    <p id="notice"><%= notice %></p>
    <div class="image-holder">
      <a href="/next/<%= @post.id %>" id="next-image-link"><%= image_tag(@post.image.url(:big), class: "image") %></a>
    </div>
    <p class="post-title"><%= @post.title %></p>
    <p class="post-description"><%= @post.description %></p>
    <% if @project.section.title != "about" %>
    <% @project.posts.each do |post| %>
    <% if @post == post %>
     <p class="dot-buttons" id="active-dot"><%= link_to "", project_post_path(@project, post) , class: "fa fa-circle", id: "dot-link" %></p>
     <% else %>
      <p class="dot-buttons"><%= link_to "", project_post_path(@project, post) , class: "fa fa-circle", id: "dot-link" %></p>
    <% end %>
    <% end %>
    <% end %>
  <% end %>
  <% else %>
  <p class="post-description">Under Construction</p>
  <%= link_to "Delete section", "/sections/#{@section.id}", method: :delete %>


<% end %>

